{% extends 'base.html.twig' %}


{% block body %}

<form action="cvv.docx" >
  <fieldset>
    <legend>CV✅</legend>

    <div class="form-group">
      <label for="mail" class="form-label mt-4">Adresse Mail</label>
      <input type="email" class="form-control" id="mail" aria-describedby="mail" placeholder="Adresse mail" required>
      <small id="mail" class="form-text text-muted">Nous ne partagerons jamais votre adresse mail.</small>
    </div>

    <div class="form-group">
      <label for="nom" class="form-label mt-4">Nom</label>
      <input class="form-control" type="text"  id="nom" placeholder="Nom" required>
    </div>

    <div class="form-group">
      <label for="prenom" class="form-label mt-4">Prénom</label>
      <input  class="form-control" id="prenom" placeholder="Prénom" minlength="1" required>
    </div>

    <div class="form-group">
      <label for="nomentreprise" class="form-label mt-4">Nom de votre entreprise</label>
      <input  class="form-control" id="nomentreprise" placeholder="Nom de votre entreprise" required>
    </div>

    <div class="form-group">
      <label for="poste" class="form-label mt-4">Poste</label>
      <input  class="form-control" id="poste" placeholder="Entrer votre poste s'il vous plait" required>
    </div>

    <input type="submit" value="Télécharger mon cv" class="btn btn-primary"> 

  </fieldset>
</form>

{% endblock %}
